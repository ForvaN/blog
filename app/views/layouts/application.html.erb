<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script id="dsq-count-scr" src="//devsimpleblog.disqus.com/count.js" async></script>
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="<%= posts_path %>"><%= t("posts.index.title") %></a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% Category.order(:name).roots.each do |category| %>
              <li class="nav-item <%= 'active' if current_page?(category_path(category)) %>">
                <%= link_to category.name, category, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
          <ul class="navbar-nav pull-xs-right">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Wyloguj się", destroy_user_session_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Zaloguj się", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Zarejestruj się", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
            <li class="nav-item <%= "active" if I18n.locale == :pl %>">
              <%= link_to "PL", { locale: :pl }, class: "nav-link" %>
            </li>
            <li class="nav-item <%= "active" if I18n.locale == :en %>">
              <%= link_to "EN", { locale: :en }, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </nav>
    </div>
    <div class="container main">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="alert <%= bootstrap_class_for(name) %>">
              <button class="close" data-dismiss="alert">&times;</button>
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>
    <div class="row">
      <div class="col-md-8">
        <%= yield %>
    </div>
    <div class="col-md-4">
      <%= render 'shared/submenu' %>
      <div class="tag_cloud">
        <h2>Tagi</h2>
        <% tag_cloud(Tag.counts, %w{tag1 tag2 tag3 tag4 tag5}) do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</body>
</html>
