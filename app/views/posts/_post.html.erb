<article class="post">
  <section class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <small>
      <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>
      |
      <%= link_to "Edytować", edit_post_path(post) %>
      |
      <%= link_to "Usunąć", post_path(post), method: :delete,
        data: { confirm: "Jesteś pewien?" } %>
    </small>
  </section>
  <section class="post-summary">
    <%= post.summary %>
  </section>
</article>
